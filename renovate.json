{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "branchPrefix": "renovate/",
  "dryRun": false,
  "username": "renovate",
  "gitAuthor": "Renovate Bot <bot@renovateapp.com>",
  "onboarding": false,
  "platform": "github",
  "includeForks": false,
  "repositories": [
    "clemak27/homelab"
  ],
  "packageRules": [
    {
      "matchPaths": ["snowflake/**"],
      "branchPrefix": "renovate/snowflake-",
      "semanticCommitScope": "snowflake"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^.*\\.nix$"],
      "matchStrings": [
        "\\s*service-version = \"v(?<currentValue>.*)\"; # renovate: datasource=(?<datasource>.*) depName=(?<depName>.*)( versioning=(?<versioning>.*))?\\s*"
      ],
      "versioningTemplate": "{{#if versioning}}{{versioning}}{{else}}semver{{/if}}"
    }
  ]
}
